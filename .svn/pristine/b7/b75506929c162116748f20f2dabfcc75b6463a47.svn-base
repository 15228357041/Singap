package com.mingcloud.proxy.logiclayer.huaweihandler;

import java.util.List;

import org.apache.log4j.Logger;

import com.mingcloud.proxy.datacenter.DataCenter;
import com.mingcloud.proxy.datalayer.dao.archiveinfo.SparepartMapper;
import com.mingcloud.proxy.datalayer.dto.archiveinfo.SparepartDto;
import com.mingcloud.proxy.datalayer.entity.archiveinfo.SparepartEntity;
import com.mingcloud.proxy.util.JdbcChange;
import com.mingcloud.proxy.util.SpringContextUtil;

public class SparepartDataInThread implements Runnable {
	private static Logger logger = Logger.getLogger(SparepartDataInThread.class);
	
	private JdbcChange jdbcChange = JdbcChange.getJdbcChange();
	
	private DataCenter dataCenter = DataCenter.getInstance();
	
	private SparepartMapper sparepartMapper = SpringContextUtil.getBean("sparepartMapper");
	
	public SparepartDataInThread() {
		// TODO Auto-generated constructor stub
		// 设置数据源为oracle
		jdbcChange.changeJdbc(JdbcChange.oracleDataSource);
	}

	@Override
	public void run() {
		// TODO Auto-generated method stub
		logger.info("SparepartDataInThread begin");
		
		while(true) {
			try {
				if(dataCenter.getSparepartlistSize() < DataCenter.COMMONRECORDEXLIST_MAX_LENGTH) {
					getAllSparepartData();
					logger.info("SparepartDataInThread wait for 30 minutes...");
					Thread.sleep(30 * 60 * 1000);
				} else {
					logger.info("SparepartDataInThread wait for 5 minutes...");
					Thread.sleep(5 * 60 * 1000);
				}
			} catch(Exception e) {
				logger.error("SparepartDataInThread: " + e);
			}
		}
	}

	private void getAllSparepartData() {
		// TODO Auto-generated method stub
		List<SparepartEntity> list = null;
		try {
			list = sparepartMapper.selectAllApi();
			if(list != null && !list.isEmpty()) {
				for(SparepartEntity entity : list) {
					SparepartDto dto = new SparepartDto();
					dto.setSparepartkey(entity.getSparepartkey());
					dto.setSparepartname(entity.getSparepartname());
					dto.setExtraspinfo1(entity.getExtraspinfo1());
					dto.setExtravarchar1(entity.getExtravarchar1());
					dto.setExtravarchar2(entity.getExtravarchar2());
					dto.setExtraint1(entity.getExtraint1());
					dto.setExtraint2(entity.getExtraint2());
					dataCenter.pushSparepartlist(dto);
				}
				logger.info("SparepartDataInThread getAllSparepartData succeeded...");
			}
		} catch(Exception e) {
			logger.error("SparepartDataInThread getAllSparepartData: " + e);
		}
		
	}

}
