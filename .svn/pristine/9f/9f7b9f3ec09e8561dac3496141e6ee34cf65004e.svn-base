package com.mingcloud.proxy.logiclayer.inspectionhandler;

import com.mingcloud.proxy.datacenter.DataCenter;
import com.mingcloud.proxy.datalayer.dao.archiveinfo.InspectionHeaderMapper;
import com.mingcloud.proxy.datalayer.dto.inspection.InspectionHeaderDto;
import com.mingcloud.proxy.util.JdbcChange;
import com.mingcloud.proxy.util.SpringContextUtil;
import org.apache.log4j.Logger;

import java.util.List;

public class InspectionDataInThread implements Runnable{

    private static Logger logger = Logger.getLogger(InspectionDataInThread.class);

    private JdbcChange jdbcChange = JdbcChange.getJdbcChange();

    private DataCenter dataCenter = DataCenter.getInstance();

    private InspectionHeaderMapper inspectionHeaderMapper = SpringContextUtil.getBean("inspectionHeaderMapper");

    @Override
    public void run() {
        logger.info("InspectionDataInThread begin ...");
        // 设置数据源为oracle
        jdbcChange.changeJdbc(JdbcChange.oracleDataSource);
        logger.info("InspectionDataInThread change to oracleDataSource");
        while (true) {
            try {
                if (dataCenter.getInspectionHeaderListSize() < dataCenter.COMMONRECORDEXLIST_MAX_LENGTH) {
                    getAllInspectionData();
                    logger.info("InspectionDataInThread wait for 60 minutes...");
                    Thread.sleep(60 * 60 * 1000);
                } else {
                    logger.info("InspectionDataInThread wait for 5 minutes...");
                    Thread.sleep(5 * 60 * 1000);
                }
            } catch (Exception e) {
                logger.error("InspectionDataInThread: " + e);
            }

        }
    }

    private void getAllInspectionData(){
        try {
            List<InspectionHeaderDto> list  = inspectionHeaderMapper.selectAll();
            if (null != list && list.size() > 0) {
                for (InspectionHeaderDto dto : list) {
                    dataCenter.pushInspectionHeaderList(dto);
                }
            }
            logger.info("InspectionDataInThread========================" + dataCenter.getInspectionHeaderListSize());
        } catch (Exception e) {
            logger.error("InspectionDataInThread getAllInspectionData :" + e);
        }
    }
}
