package com.mingcloud.proxy.datacenter;

import com.mingcloud.proxy.datalayer.dao.archiveinfo.SIFATransferMapper;
import com.mingcloud.proxy.datalayer.entity.archiveinfo.SIFATransferEntity;
import com.mingcloud.proxy.util.SpringContextUtil;

import java.util.List;


public class SIFATransferData {
	
	private static SIFATransferData sIFATransferData;
	
	private static SIFATransferMapper sIFATransferMapper = SpringContextUtil.getBean("SIFATransferMapper");
	
	public static SIFATransferData getInstance() {
    	if(sIFATransferData == null) {
    		sIFATransferData = new SIFATransferData();
    	}
    	return sIFATransferData;
    }
	
    private List<SIFATransferEntity> sIFATransferList;
    
    private SIFATransferData() {
    	setSIFATransferData();
    }
    
    public List<SIFATransferEntity> getSIFATransferList() {
    	return sIFATransferList;
    }
    
    public int insertSIFATransfer(SIFATransferEntity sIFATransferEntity) {
		return sIFATransferMapper.insert(sIFATransferEntity);
    }
    
    public void resetSIFATransferList() {
    	setSIFATransferData();
    }
    
    private void setSIFATransferData() {
    	SIFATransferEntity entity = new SIFATransferEntity();
    	sIFATransferList = sIFATransferMapper.selectAll();
    }
    
    public int updateSIFATransfer(SIFATransferEntity sIFATransferEntity) {
		return sIFATransferMapper.update(sIFATransferEntity);
    }
    
    public int setStatusid() {
    	return sIFATransferMapper.setStatusid();
    }
}
