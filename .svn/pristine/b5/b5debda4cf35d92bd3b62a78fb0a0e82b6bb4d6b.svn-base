package com.mingcloud.proxy.logiclayer.huaweihandler;

import java.util.List;

import org.apache.log4j.Logger;

import com.mingcloud.proxy.datacenter.DataCenter;
import com.mingcloud.proxy.datalayer.dao.archiveinfo.MaintenanceobjectgroupMapper;
import com.mingcloud.proxy.datalayer.dto.archiveinfo.MaintenanceobjectgroupDto;
import com.mingcloud.proxy.datalayer.entity.archiveinfo.MaintenanceobjectgroupEntity;
import com.mingcloud.proxy.util.JdbcChange;
import com.mingcloud.proxy.util.SpringContextUtil;

public class MaintenanceobjectgroupDataInThread implements Runnable {
	private static Logger logger = Logger.getLogger(MaintenanceobjectgroupDataInThread.class);
	
	private JdbcChange jdbcChange = JdbcChange.getJdbcChange();
	
	private DataCenter dataCenter = DataCenter.getInstance();
	
	private MaintenanceobjectgroupMapper maintenanceobjectgroupMapper = SpringContextUtil.getBean("maintenanceobjectgroupMapper");
	
	public MaintenanceobjectgroupDataInThread() {
		// TODO Auto-generated constructor stub
		// 设置数据源为oracle
		jdbcChange.changeJdbc(JdbcChange.oracleDataSource);
	}

	@Override
	public void run() {
		// TODO Auto-generated method stub
		logger.info("MaintenanceobjectgroupDataInThread begin");
		
		while(true) {
			try {
				if(dataCenter.getMaintenancegrouplistSize() < DataCenter.COMMONRECORDEXLIST_MAX_LENGTH) {
					getAllMaintenancegroupData();
					logger.info("MaintenanceobjectgroupDataInThread wait for 10 minutes...");
					Thread.sleep(10 * 60 * 1000);
				} else {
					logger.info("MaintenanceobjectgroupDataInThread wait for 5 minutes...");
					Thread.sleep(5 * 60 * 1000);
				}
			} catch(Exception e) {
				logger.error("MaintenanceobjectgroupDataInThread: " + e);
			}
		}
	}

	private void getAllMaintenancegroupData() {
		// TODO Auto-generated method stub
		List<MaintenanceobjectgroupEntity> list = null;
		try {
			list = maintenanceobjectgroupMapper.selectAllApi();
			if(list != null && !list.isEmpty()) {
				for(MaintenanceobjectgroupEntity entity : list) {
					MaintenanceobjectgroupDto dto = new MaintenanceobjectgroupDto();
					dto.setMogroupkey(entity.getMogroupkey());
					dto.setMogroupname(entity.getMogroupname());
					dataCenter.pushMaintenancegrouplist(dto);
				}
				logger.info("MaintenanceobjectgroupDataInThread getAllMaintenancegroupData succeeded...");
			}
		} catch(Exception e) {
			logger.error("MaintenanceobjectgroupDataInThread getAllMaintenancegroupData: " + e);
		}
	}

}
